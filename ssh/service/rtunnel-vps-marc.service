[Unit]
Description=AutoSSH tunnel service for the pc-fixe of Valentin COLIN in direction of the vps of Marc PARTENSKY
After=network.target

[Install]
WantedBy=multi-user.target

[Service]
User=valentin
Type=simple
Environment="AUTOSSH_GATETIME=0"
ExecStart=/usr/bin/autossh -M 0 -o "PubkeyAuthentication=yes" -o "PasswordAuthentication=no" -o "ServerAliveInterval 30" -o "ServerAliveCountMax 3" -NR 7131:localhost:22 -i "~/.ssh/id_ed25519" -p 7022 tunnel@marcpartensky.com
Restart=on-failure
